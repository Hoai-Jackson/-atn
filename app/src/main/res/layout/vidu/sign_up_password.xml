<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="633dp"
        android:layout_height="73dp"
        android:fontFamily="sans-serif-medium"
        android:text="Thiết lập mật khẩu"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FB923C"
        android:textSize="48sp"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="109dp"
        tools:layout_editor_absoluteY="3dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="721dp"
        android:layout_height="41dp"
        android:fontFamily="sans-serif-medium"
        android:text="Tài khoản của bạn có thể được dùng để đăng nhập trên tất cả các thiết bị"
        android:textAlignment="center"
        android:textColor="#52525B"
        android:textSize="20sp"
        android:typeface="normal"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="76dp" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="585dp"
        android:layout_height="69dp"
        android:background="@drawable/duongvien_goctron"
        android:fontFamily="sans-serif-medium"
        android:inputType="text"
        android:padding="5dp"
        android:text="   Điền mật khẩu"
        android:textAlignment="viewStart"
        android:textColor="#A3A3A3"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="126dp" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="585dp"
        android:layout_height="69dp"
        android:background="@drawable/duongvien_goctron"
        android:fontFamily="sans-serif-medium"
        android:inputType="text"
        android:padding="5dp"
        android:text="   Xác nhận mật khẩu"
        android:textAlignment="viewStart"
        android:textColor="#A3A3A3"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="211dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/exit2"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="6dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00FFFFFF"
        app:srcCompat="@drawable/sign_in"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="311dp" />

</androidx.constraintlayout.widget.ConstraintLayout>