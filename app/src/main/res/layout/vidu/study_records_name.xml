<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="590dp"
        android:layout_height="70dp"
        android:fontFamily="sans-serif-medium"
        android:text="Tạo hồ sơ học tập"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#FB923C"
        android:textSize="48sp"
        android:typeface="normal"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="362dp"
        android:layout_height="37dp"
        android:fontFamily="sans-serif-medium"
        android:text="Tên của bé là gì?"
        android:textAlignment="center"
        android:textColor="#52525B"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="86dp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="500dp"
        android:layout_height="75dp"
        android:background="@drawable/duongvien_goctron"
        android:fontFamily="sans-serif-medium"
        android:inputType="text"
        android:padding="5dp"
        android:text="Điền tên của bé"
        android:textAlignment="center"
        android:textColor="#52525B"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="175dp"
        tools:layout_editor_absoluteY="159dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/continue1"
        tools:layout_editor_absoluteX="185dp"
        tools:layout_editor_absoluteY="292dp" />

</androidx.constraintlayout.widget.ConstraintLayout>